# Copy to backend/.env and set values
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/primex_nexus
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379/0

JWT_SECRET=change-me
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Comma-separated list
CORS_ORIGINS=http://localhost:3000

# Optional: enable cloud speech-to-text
OPENAI_API_KEY=
SPEECH_TRANSCRIBE_MODEL=whisper-1
SPEECH_MAX_FILE_MB=20
# Comma-separated list, e.g. audio/webm,audio/wav,audio/mp4
SPEECH_ALLOWED_MIME=


